<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:sec="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-4.2.xsd
		http://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!--  HTTP를 위한 자동 설정 활성화 -->
	<sec:http auto-config="true">
	<!-- CSRF Token Off -->
		<sec:csrf disabled="true"/>
		<sec:form-login
			username-parameter="jEmail"
			password-parameter="jPassword"
			login-page="/jeja/login"
			login-processing-url="/jeja/login"
			authentication-success-handler-ref="loginSuccessHandler"
			authentication-failure-handler-ref="loginFailureHandler"
			default-target-url="/"
		/>
		<sec:form-login
			username-parameter="dEmail"
			password-parameter="dPassword"
			login-page="/dalin/login"
			login-processing-url="/dalin/login"
			authentication-success-handler-ref="loginSuccessHandler"
			authentication-failure-handler-ref="loginFailureHandler"
			default-target-url="/"
		/>
		<sec:logout
			logout-url="/member/logout"
			logout-success-url="/"
		/>
	</sec:http>
	
	<bean id="encoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder" />
	

	<sec:authentication-manager>
		<sec:authentication-provider>
			<sec:jdbc-user-service 
				data-source-ref="dataSource"
				users-by-username-query="select j_email, j_password, enabled from jeja where j_email=? and rownum=1"
				authorities-by-username-query="select username, authority from authorities where username=?"
			/>
			<sec:jdbc-user-service data-source-ref="dataSource"
				users-by-username-query="select d_email,d_password, enabled from dalin where d_email=? and rownum=1"
				authorities-by-username-query="select username, authority from authorities where username=?"
			/>
			<sec:user-service>
				<sec:user name="admin" authorities="ROLE_ADMIN" password="1234" />
			</sec:user-service>
			<sec:password-encoder ref="encoder" />
		</sec:authentication-provider>
	</sec:authentication-manager>
</beans>